<%# // The Cards are coded below %>

<div class="card-deck" style="width: 100vw; display: flex; column-count:3;">
<% @items.each do |item| %>
  <div class="card" style="margin: 4px; width: 350px;">
    <img src=<%= item.image_url %> class="card-img-top" width = "50px" height = "150px">
      <div class="card-body>
        <h5 class="card-title"><%= item.name %></h5>
        <p class="card-text">Price: <%= item.price %> <s> <%= (item.original_price) ? item.original_price : ""%></s> </p>
      </div>
      <div class="card-footer">
            <%= link_to 'More', item_path(item), class: "btn btn-dark" %>
            <%= link_to 'Change category', edit_item_path(item), class: "btn btn-dark" %>
            <%= link_to "Delete", item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
      </div>
  </div>
  <% end %>
</div>

