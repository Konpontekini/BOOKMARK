<div class="main-container">
  <div class="row items">
    <% @items.each do |item| %>
      <div class="item card">
        <div class="item-card-info">
          <div class="item-basic-info">
            <h3><%= item.category.name %></h3>
            <h4><%= item.name %></h4>
            <img class="d-block w-50" src=<%= item.image_url %> alt="">
          </div>

          <div class="item-description-price">
            <i class="description">Description:</i><span><%= item.description %></span>
            <i class="price">Price: </i><span><%= item.price %></span>
          </div>

          <div class="item-actions">
            <%= link_to 'More', item_path(item) %>
            <%= link_to 'Change category', edit_item_path(item) %>
            <%= link_to "delete", item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-ghost" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
  
